@page "{RaceIDFilter:int?}"
@model DriverCarRaceDetailsModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Driver Car Race Details</title>

    <!-- Custom fonts for this template -->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body id="page-top">

    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Race Details</h1>
            <a href="http://localhost:5005/StartPage" class="btn btn-primary btn-sm"><i class="fas fa-arrow-left"></i> Back to Start Page</a>
        </div>

        <!-- Filter Form -->
        <form method="get" class="mb-4">
            <div class="form-group">
                <label for="RaceIDFilter">Filter by Race ID:</label>
                <input type="number" id="RaceIDFilter" name="RaceIDFilter" class="form-control" placeholder="Enter Race ID" value="@Model.RaceIDFilter" />
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>

        <!-- Driver Car Race Details Table -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Driver ID</th>
                                <th><a href="http://localhost:5005/Drivers" class="text-primary">Driver Name</a></th>
                                <th>Car ID</th>
                                <th>Car Model</th>
                                <th>Race ID</th>
                                <th><a href="http://localhost:5005/SeasonRaces" class="text-primary">Race Name</a></th>
                                <th>Date of Race</th>
                                <th>Position Finished</th>
                                <th>Points</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in Model.DriverCarRaceDetails)
                            {
                                <tr>
                                    <td>@detail.DriverID</td>
                                    <td>@detail.DriverName</td>
                                    <td>@detail.CarID</td>
                                    <td>@detail.CarModel</td>
                                    <td>@detail.RaceID</td>
                                    <td>@detail.RaceName</td>
                                    <td>@detail.DateOfRace.ToString("yyyy-MM-dd")</td>
                                    <td>@detail.PositionFinished</td>
                                    <td>@detail.Points</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript -->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages -->
    <script src="/js/sb-admin-2.min.js"></script>
</body>

</html>

@page
@model AdminModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex">
    <!-- Sidebar -->

    <!-- Page Content -->
    <div class="flex-grow-1 p-4" style="margin-left: 250px;">
        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
            <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                <i class="fa fa-bars"></i>
            </button>
            <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        </nav>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">
            <!-- Cards -->
            <div class="row">
                <!-- Users Card -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Users</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.UserCount</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-users fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Drivers Card -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Drivers</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.DriverCount</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-car fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Races Card -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Races</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.RaceCount</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-flag-checkered fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Teams Card -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Teams</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TeamCount</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-users-cog fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Links Section -->
            <div class="mt-5">
                <h5>Details & Insights</h5>
                <ul class="list-group">

                    <li class="list-group-item">
                        <a href="http://localhost:5005/StartPage">Start Page</a>
                    </li>

                    <li class="list-group-item">
                        <a href="http://localhost:5005/Drivers">Drivers</a>
                    </li>

                    <li class="list-group-item">
                        <a href="http://localhost:5005/DriverPoints">Drivers' Points</a>
                    </li>

                    <li class="list-group-item">
                        <a href="http://localhost:5005/TeamInsights">Team Insights</a>
                    </li>

                    <li class="list-group-item">
                        <a href="http://localhost:5005/TeamPerformance">Team Performances</a>
                    </li>

                    <li class="list-group-item">
                        <a href="http://localhost:5005/DriverTeam">Driver's Teams</a>
                    </li>

                    <li class="list-group-item">
                        <a href="http://localhost:5005/CarTeam">Cars' Information</a>
                    </li>

                    <li class="list-group-item">
                        <a href="http://localhost:5005/RacePath">Race Paths</a>
                    </li>

                    <li class="list-group-item">
                        <a href="http://localhost:5005/RaceDetails">Race Details</a>
                    </li>

                    <li class="list-group-item">
                        <a href="http://localhost:5005/raceWinners">Race Winners</a>
                    </li>

                    <li class="list-group-item">
                        <a href="http://localhost:5005/SeasonRaces">Races In Seasons</a>
                    </li>

                    <li class="list-group-item">
                        <a href="http://localhost:5005/Accidents">Accidents</a>
                    </li>

                    <li class="list-group-item">
                        <a href="http://localhost:5005/ManageAccount">Manage Account</a>
                    </li>

                   



                </ul>
            </div>


@page
@model AddPresetQueryModel
@{
    ViewData["Title"] = "Add Preset Query";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Add Preset Query</h1>

        <form method="post">
            <div class="form-group">
                <label for="queryName">Query Name</label>
                <input asp-for="QueryName" class="form-control" id="queryName" />
            </div>
            <div class="form-group mt-3">
                <label for="sqlQuery">SQL Query</label>
                <textarea asp-for="SQLQuery" class="form-control" id="sqlQuery" rows="5"></textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Save</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-info mt-4">@Model.Message</div>
        }
    </div>
</body>
</html>

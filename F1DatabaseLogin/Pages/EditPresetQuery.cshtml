@page "{id:int}"
@model EditPresetQueryModel
@{
    ViewData["Title"] = "Edit Preset Query";
}

<div class="container mt-5">
    <h1 class="text-center">Edit Preset Query</h1>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info">@Model.Message</div>
    }

    <form method="post">
        <!-- Hidden input to send QueryID -->
        <input type="hidden" asp-for="QueryID" />

        <div class="form-group">
            <label for="queryName">Query Name</label>
            <input asp-for="QueryName" class="form-control" id="queryName" />
        </div>
        <div class="form-group mt-3">
            <label for="sqlQuery">SQL Query</label>
            <textarea asp-for="SQLQuery" class="form-control" id="sqlQuery" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    </form>
</div>

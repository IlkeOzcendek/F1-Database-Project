@{
    var UserRole = Context.Session.GetInt32("UserRole");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - F1 Database</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="bg-primary text-white p-3" style="width: 250px; height: 100vh; position: fixed;">
    <h3 class="text-center">F1 DATABASE</h3>
    <ul class="nav flex-column">
        
        
        @if (UserRole == 1) // Admin Menüsü
        {
            <li class="nav-item my-2">
                <a href="/Admin" class="nav-link text-white">
                    <i class="bi bi-tools"></i> Admin Dashboard
                </a>
            </li>

            <li class="nav-item my-2">
                <a href="/ManagePresetQueries" class="nav-link text-white">
                    <i class="bi bi-tools"></i> Manage Preset Queries
                </a>
            </li>

            <li class="nav-item my-2">
                <a href="/RunSQLCommands" class="nav-link text-white">
                    <i class="bi bi-tools"></i> Run SQL Commands
                </a>
            </li>

            <li class="nav-item my-2">
                <a href="/ManageUsers" class="nav-link text-white">
                    <i class="bi bi-people"></i> Manage Users
                </a>
            </li>

            <li class="nav-item my-2">
                <a href="/login" class="nav-link text-white">
                    <i class="bi bi-tools"></i> Log Out
                </a>
            </li>
        }
        else if (UserRole == 2) // Kullanıcı Menüsü
        {
            <li class="nav-item my-2">
                <a href="/StartPage" class="nav-link text-white">
                    <i class="bi bi-person"></i> Start Page
                </a>
            </li>

            <li class="nav-item my-2">
            <a href="/Drivers" class="nav-link text-white">
                <i class="bi bi-car-front"></i> Drivers
            </a>
        </li>

        <li class="nav-item my-2">
            <a href="/DriverPoints" class="nav-link text-white">
                <i class="bi bi-car-front"></i> Drivers' Points
            </a>
        </li>

            <li class="nav-item my-2">
                <a href="/TeamInsights" class="nav-link text-white">
                    <i class="bi bi-tools"></i> Team Insights
                </a>
            </li>

            <li class="nav-item my-2">
                <a href="/TeamPerformance" class="nav-link text-white">
                    <i class="bi bi-tools"></i> Team Performances
                </a>
            </li>

             <li class="nav-item my-2">
                <a href="/DriverTeam" class="nav-link text-white">
                    <i class="bi bi-tools"></i> Driver's Teams
                </a>
            </li>

            <li class="nav-item my-2">
                <a href="/CarTeam" class="nav-link text-white">
                    <i class="bi bi-tools"></i> Cars' Information
                </a>
            </li>

            <li class="nav-item my-2">
                <a href="/RacePath" class="nav-link text-white">
                    <i class="bi bi-tools"></i> Race Paths
                </a>
            </li>

            <li class="nav-item my-2">
                <a href="/RaceDetails" class="nav-link text-white">
                    <i class="bi bi-tools"></i> Race Details
                </a>
            </li>

            <li class="nav-item my-2">
                <a href="/raceWinners" class="nav-link text-white">
                    <i class="bi bi-tools"></i> Race Winners
                </a>
            </li>

            <li class="nav-item my-2">
                <a href="/SeasonRaces" class="nav-link text-white">
                    <i class="bi bi-tools"></i> Races In Seasons
                </a>
            </li>

            <li class="nav-item my-2">
                <a href="/Accidents" class="nav-link text-white">
                    <i class="bi bi-tools"></i> Accidents
                </a>
            </li>

            <li class="nav-item my-2">
                <a href="/ManageAccount" class="nav-link text-white">
                    <i class="bi bi-tools"></i> Manage Account
                </a>
            </li>

            <li class="nav-item my-2">
                <a href="/login" class="nav-link text-white">
                    <i class="bi bi-tools"></i> Log Out
                </a>
            </li>
        }

    
    </ul>
</nav>


        <!-- Page Content -->
        <div class="flex-grow-1 p-4" style="margin-left: 250px;">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
